@import url('https://fonts.googleapis.com/css?family=NTR')
@import 'icomoon.styl'

*
	margin 0
	padding 0
	font-family 'NTR'

.mensaje 
	width 100%
	margin 0 auto
	text-align center
	color #999			
	
body	
	
	header
		border-bottom 1px solid rgba(0,0,0,0.1)
		padding  1em 3em 0.2em 3em
		
		h1, a
			display inline-block
			vertical-align middle
			padding 0
			
		a 
			float right
			font-size 20px
			padding 0.5em 0 0 0
			text-transform uppercase
			transition all 0.3s linear
			text-decoration none
		
		a:hover
			color #777
	
	.leds
		text-align center
		padding 2em 0
		
		p 
			font-size 30px
			color #666
			
		li 
			display inline-block
			vertical-align middle
			width 20px
			height 20px
			border 1px solid rgba(0,0,0,0.3)
			border-radius 50%
			margin 0 0.5em
			cursor pointer
			transition all 0.3s linear
		
		li:hover
			border 1px solid black
		
		.encendido
			background #EA1C3E
	
	#texto, #imagen
		width 255px 
		margin 2em auto 0 auto
		text-align center
	
	#imagen
		width 375px
	
	#reproductor
		margin 2em auto 
		width 200px
		text-align center
		
		li 
			display inline-block
			vertical-align middle
			font-size 50px 
			color #999
			transition all 0.3s linear
			cursor pointer
		
		li:hover
			color #3F8DF5
		
		.activo 
			color #222
		
		span 
			display block