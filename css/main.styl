@import url('https://fonts.googleapis.com/css?family=NTR')
@import 'icomoon.styl'

*
	margin 0
	padding 0
	font-family 'NTR'

.mensaje 
	width 100%
	margin 0 auto
	text-align center
	color #999

.componentes
	margin 0
	padding 0 1em
	width 100%
	text-align center

	.lado	
		margin 0
		padding 0
		width 40%
		text-align center
		display inline-block
		vertical-align top

.botones_secuencia
	margin 0
	padding 0
	list-style none
	text-align center

	li 
		margin 0
		padding 0
		display inline-block

	p 
		font-size 30px
		color #666
		margin 0
		padding 1em 0 0.5em 0
		text-transform uppercase
	
	.tipo_secuencia
		margin 0
		padding 0.5em 0

	.led_flujo
		margin 1em auto 0 auto
		padding 0
		width 30px
		height 30px
		border-radius 50%
		border 1px solid rgba(0,0,0,0.3)
		background red
	
	.activado
		background green
	
	.cuadro
		width 300px
		margin 0 auto
		padding 0 2em

		input
			display block 
			width 100%
			padding 0.5em 0.7em
			border-radius 0.3em
			border 1px solid rgba(0,0,0,0.3)
			margin 0
			background white
			font-size 30px
			color blue
	
body	
	
	header
		border-bottom 1px solid rgba(0,0,0,0.1)
		padding  1em 3em 0.2em 3em
		
		h1, a, figure
			display inline-block
			vertical-align middle
			padding 0
			
		a 
			float right
			font-size 20px
			padding 0.5em 0 0 0
			text-transform uppercase
			transition all 0.3s linear
			text-decoration none
		
		a:hover
			color #777
		
		figure
			width 120px 
			margin 0 2em 0.6em 0
			
			img 
				width 100%
	
	#login
		text-align center
		border 0
		
		h1, a, figure
			display block
		
		figure
			margin 0 auto
			width 250px
		
		h1 
			font-size 25px
			padding 1em 0 0 0
	
	#inicio
		width 300px
		margin 4em auto 0 auto
		padding 1em 2em
		
		input
			display block 
			width 100%
			padding 0.5em 0.7em
			border-radius 0.3em
			border 1px solid rgba(0,0,0,0.3)
			margin 0 0 0.5em 0
			background white
		
		input[type='submit']
			color #0000AA
			text-transform uppercase

	.leds
		text-align center
		padding 2em 0 0 0
		
		p 
			font-size 30px
			color #666	
			text-transform uppercase

		p:last-child
			font-size 20px	
			
		li 
			display inline-block
			vertical-align middle
			width 30px
			height 30px
			border 1px solid rgba(0,0,0,0.3)
			border-radius 50%
			margin 0 0.5em
			//cursor pointer
			transition all 0.3s linear
		
		// li:hover
		// 	border 1px solid black
		
		.encendido
			background orange
		
		.rojo
			background red
		
		.verde
			background green
		
		.azul
			background blue
	
	.division
		margin 0
		padding 0

		.columna
			width 45%
			margin 0
			padding 0
			text-align center
			display inline-block
			vertical-align top

	#texto, #imagen, #secuencias, #audio
		width 300px 
		margin 2em auto 0 auto
		text-align center
		
		p
			font-size 30px
			color blue
	
	#texto 
		margin 4em auto 0 auto
	
	#imagen, #audio
		width 375px
	
	#ver_imagen
		width 80%
		height 80%
		margin 0 auto
		
		img 
			width 100%			
	
	#reproductor
		margin 2em auto 
		width 200px
		text-align center
		
		li 
			display inline-block
			vertical-align middle
			font-size 50px 
			color #999
			transition all 0.3s linear
			cursor pointer
		
		li:hover
			color #3F8DF5
		
		.activo 
			color #222
		
		span 
			display block
	
	#secuencias

		select
			width 100%

		input
			width 97.5%